<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4>注文履歴詳細</h4>
      <div class="row">
      	<div class="col-lg-2">
			<strong>購入者</strong>
		</div>
		<div class="col-lg-10">
			<%= @order.end_user.name_family %><%= @order.end_user.name_first %>
		</div>
		<div class="col-lg-2">
			<strong>配送先</strong>
		</div>
		<div class="col-lg-10">
			〒<%= @order.postal_code %>　<%= @order.address %><br>
			<%= @order.name %>
		</div>
		<div class="col-lg-2">
			<strong>支払方法</strong>
		</div>
		<div class="col-lg-10">
			<%= @order.payment %>
		</div>
		<div class="col-lg-2">
			<strong>注文ステータス</strong>
		</div>
		<div class="col-lg-10">
				<%= form_for @order, url:admins_order_path do |f| %>
				<%= f.select :status, Order.statuses.keys{} %>
				<%= f.submit '更新', class: 'btn btn-primary btn-xs' %>
				<% end %>
		</div>
		</div>

		<br>
		<br>
		<br>

		<div class="row">
		  <div class="col-lg-8">
			<% @sum = 0 %>
			<table class="table table-hover">
			    <thead>
					<tr>
						<th>商品名</th>
						<th>単価（税込み）</th>
						<th>数量</th>
						<th>小計</th>
						<th>製作ステータス</th>
					</tr>
				</thead>
				<tbody>
					<% @order_items.each do |order_item| %>
					<tr>
						<td><%= order_item.item.name %></td>
						<td><%= order_item.price %>円</td>
						<td><%= order_item.amount %>個</td>
						<td>
							<% sub_total = order_item.price * order_item.amount %>
							<% @sum += sub_total %>
							<%= sub_total %>円
						</td>
						<td><%= order_item.creat_status %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-lg-3 col-lg-offset-1">
			<table class="table table-bordered">
				<tr>
					<th>商品合計</th><td><%= @sum %>円</td>
				</tr>
				<tr>
					<th>送料</th><td><%= @order.cost %>円</td>
				</tr>
				<tr>
					<th>請求合計</th><th><%= @order.charge %>円</th>
				</tr>
			</table>
		</div>

	  </div>
	</div>
  </div>
</div>