<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<p>名前</p>
			<%= @contact.name %>
			<p>タイトル</p>
			<%= @contact.title %>
			<p>問い合わせ内容</p>
			<%= simple_format(@contact.body) %>
			<p>対応ステータス</p>
			<%= form_for @contact, url:admins_contact_path do |f| %>
			<%= f.select :status, Contact.statuses.keys{} %>
			<%= f.submit '更新', class: 'btn btn-primary btn-xs' %>
			<% end %>
		</div>
	</div>
</div>
