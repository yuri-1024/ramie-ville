<div class="container">
	<div class="row">
		<div class="col-lg-2">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>製作者一覧</th>
					</tr>
				</thead>
				<tbody>
					<% @creaters.each do |creater| %>
					<tr>
						<td>
							<%= link_to creater.name, items_path(creater_sort: creater.id) %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-lg-8">
		  <div class="row">
			<h2><%= @item_index_title %></h2>

			<!-- 製作者一覧をクリックしたときに表示する製作者プロフ -->
			<div class="item_index_creater_profile">
			<P><%= @item_index_creater_name %></P>
			<p><%= simple_format(@item_index_creater_profile) %></p>
			</div>
			<!-- end -->

			<% @items.each do |item| %>
				<table class="col-xs-3">
					<tbody>
						<tr>
							<td>
								<%= link_to(item_path(item.id)) do %>
							     <%= attachment_image_tag item, :image, :fill, 150, 150, format: 'jpeg' %>
							     <% end %>
						    </td>
						</tr>
						<tr>
							<td><%= item.name %></td>
						</tr>
						<tr>
							<td>￥<%= item.price %>(税抜き)</td>
						</tr>
					</tbody>
				</table>
			<% end %>
		  </div>
		  <div class="row">
		  	<%= paginate @items %>
		  </div>
	    </div>
	    <div class="col-lg-2">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>タグ一覧</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
						<% @tags.each do |tag| %>
							<%= link_to(items_path(tag_name: tag.name)) do %>
							<%= button_tag( class: 'btn btn-default btn-xs' ) do %>
							<%= tag %>
							<% end %>
							<% end %>
						<% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>