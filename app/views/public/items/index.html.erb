<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>クリエイター検索</th>
					</tr>
				</thead>
				<tbody>
					<% @creaters.each do |creater| %>
					<tr>
						<td>
							<%= link_to creater.name, items_path(creater_sort: creater.id) %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-lg-9">
		  <div class="row">
			<h2><%= @item_index_title %></h2>
			<% @items.each do |item| %>
				<table class="col-xs-3">
					<tbody>
						<tr>
							<td>
								<%= link_to(item_path(item.id)) do %>
							     <%= attachment_image_tag item, :image, :fill, 150, 150, format: 'jpeg' %>
							     <% end %>
						    </td>
						</tr>
						<tr>
							<td><%= item.name %></td>
						</tr>
						<tr>
							<td>￥<%= item.price %>(税抜き)</td>
						</tr>
					</tbody>
				</table>
			<% end %>
		  </div>
	    </div>
	</div>
</div>