<div class="container">
  <div class="row">
	<div class="col-lg-10 col-lg-offset-1">
	  <div class="row">
	  	<div class="col-lg-10">
		  <h4>ショッピングカート</h4>
		</div>
		<div class="col-lg-2">
		  <%= link_to "カートを空にする", destroy_all_path(@carts), method: :delete, class: "btn btn-danger" %>
		</div>
	  </div>

		<table class="table table-bordered">
			<thead>
				<tr>
					<th class="col-xs-4">商品名</th>
					<th class="col-xs-2">単価(税込)</th>
					<th class="col-xs-2">数量</th>
					<th class="col-xs-2">小計</th>
					<th class="col-xs-2"></th>
				</tr>
			</thead>
			<tbody>
				<% @sum = 0 %>
				<% @carts.each do |cart| %>
				<tr>
					<td>
						<%= attachment_image_tag cart.item, :image, :fill, 50, 50, format: 'jpeg' %> <%= cart.item.name %>
					</td>
					<td> <%= (cart.item.price * 1.1).floor %> 円</td>
					<td>
						<div class="form-horizontal" role="form">
						<div class="form-group">
						<%= form_for (cart) do |f| %>
							<%= f.text_field :amount, class:"col-sm-4 col-sm-offset-2" %>
							<%= f.submit '変更', class: 'btn btn-info btn-xs col-sm-4'%>
						<% end %>
					    </div>
					    </div>
					</td>
					<td>
						<% sub_total = (cart.item.price * cart.amount * 1.1).floor %>
						<% @sum += sub_total %>
						<%= sub_total %> 円
					</td>
					<td>
						<%= link_to "削除する", cart_path(cart), method: :delete, class: "btn btn-danger btn-xs" %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	  <div class="row">
	  	<div class="col-lg-2">
			<%= link_to "買い物を続ける", items_path, class: "btn btn-default" %>
		</div>
		<div class="col-sm-4 col-sm-offset-6">
			<table class="table table-bordered">
				<tr>
					<th>合計金額</th>
					<td>
						<%= @sum %> 円
					</td>
				</tr>
			</table>
		</div>
		<div class="col-lg-2 col-lg-offset-5">
			<%= link_to "情報入力に進む", new_order_path, class: "btn btn-default btn-lg" %>
	  </div>
    </div>
  </div>
</div>