<div class="container">
	<div class="row">
		<div class="col-lg-6 col-lg-offset-3">
			<h3>プロフィール</h3>
			<br>
			<br>
			<table class="table table-bordered">
				<tr>
					<th>ID</th>
					<td><%= current_creater.id %></td>
				</tr>
				<tr>
					<th>名前</th>
					<td><%= current_creater.name %></td>
				</tr>
				<tr>
					<th>プロフィール</th>
					<td><%= simple_format(current_creater.profile) %></td>
				</tr>
				<tr>
					<th>ステータス</th>
					<td><%= current_creater.status %></td>
				</tr>
			</table>
			
			<p><%= link_to "編集", edit_creaters_profile_path, class:"btn btn-default" %></p>
		</div>
	</div>
</div>