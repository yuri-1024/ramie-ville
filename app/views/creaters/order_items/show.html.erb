<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">

    	<table class="table table-hover">
			    <thead>
					<tr>
						<th></th>
						<th>商品名</th>
						<th>単価（税込み）</th>
						<th>数量</th>
						<th>製作ステータス</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><%= attachment_image_tag @item, :image, :fill, 50, 50, format: 'jpeg'%></td>
						<td><%= @item.name %></td>
						<td><%= @order_item.price %>円</td>
						<td><%= @order_item.amount %>個</td>
						<td>
							<%= form_for @order_item, url:creaters_order_item_path(@order_item.id) do |f| %>
							<%= f.select :creat_status, OrderItem.creat_statuses.keys{} %>
							<%= f.submit '更新', class: 'btn btn-primary btn-xs' %>
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>


    </div>
	</div>
</div>