<div class="container">
	<div class="row">
    	<div class="col-md-8 col-md-offset-2">
		<div class="row">
			<div class="col-xs-10">
				<h4>商品一覧</h4>
      		</div>
      		<div class="col-xs-2">
				<%= link_to(new_creaters_item_path) do %>
				<button type="button" class="btn btn-default btn-circle">
				商品追加
			    </button>
				<% end %>
	  		</div>
		</div>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>商品名</th>
					<th>税抜き価格</th>
					<th>販売ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @items.each do |item| %>
				<tr>
		            <td>
		            	<%= link_to(creaters_item_path(item.id)) do %>
		            	<%= item.name %>
		            	<% end %>
	            	</td>
		            <td><%= item.price %></td>
		            <td><%= item.status %></td>
		        </tr>
			    <% end %>
			</tbody>
		</table>
		</div>
  	</div>
</div>