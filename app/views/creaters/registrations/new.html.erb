<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <br>
      <br>
      <h4>製作者登録</h4>
      <br>
      <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="col-lg-12">

        <div class="row">
          <div class="form-group">
            <label class="col-xs-3 control-label">name</label>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-xs-4" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label class="col-xs-3 control-label">メールアドレス</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-xs-4" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label class="col-xs-3">パスワード（6文字以上</label>
            <%= f.password_field :password, autocomplete: "new-password", class:"col-xs-4"%>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label class="col-xs-3">パスワード（確認用）</label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-xs-4" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label class="col-xs-3">profile</label>
            <%= f.text_area :name, autofocus: true, autocomplete: "name" %>
          </div>
        </div>

        <div class="row">
          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>