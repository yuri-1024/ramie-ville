<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>登録情報変更</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "end_users/shared/error_messages", resource: resource %>
          <div class="row">
            <div class="col-lg-12">

              <div class="row">
                <div class="form-group">
                  <label class="col-xs-3 control-label">名前　（姓）</label>
                  <%= f.text_field :name_family, autofocus: true, autocomplete: "name_family", class:"col-xs-4" %>
                  <label class="col-xs-1">（名）</label>
                  <%= f.text_field :name_first, autofocus: true, autocomplete: "name_first", class:"col-xs-4" %>
                </div>
              </div>

              <div class="row">
                <div class="form-group">
                  <label class="col-xs-3 control-label">フリガナ（セイ）</label>
                  <%= f.text_field :name_family_kana, autofocus: true, autocomplete: "name_family_kana", class:"col-xs-4" %>
                  <label class="col-xs-1 control-label">(メイ)</label>
                  <%= f.text_field :name_first_kana, autofocus: true, autocomplete: "name_first_kana", class:"col-xs-4" %>
                </div>
              </div>

              <div class="row">
                <div class="form-group">
                  <label class="col-xs-3 control-label">メールアドレス</label>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-xs-4" %>
                </div>
              </div>

              <div class="row">
                <div class="form-group">
                  <label class="col-xs-3 control-label">郵便番号</label>
                  <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"col-xs-4" %>
                </div>
              </div>

              <div class="row">
                <div class="form-group">
                  <label class="col-xs-3 control-label">住所</label>
                  <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"col-xs-9" %>
                </div>
              </div>

              <div class="row">
                <div class="form-group">
                  <label class="col-xs-3 control-label">電話番号</label>
                  <%= f.text_field :tel, autofocus: true, autocomplete: "tel", class:"col-xs-4" %>
                  <div class="col-xs-6"></div>
                </div>
              </div>

              <div class="row">
                <div class="form-group">
                  <label class="col-xs-3 control-label">メールアドレス</label>
                  <%= f.text_field :email, autofocus: true, autocomplete: "email", class:"col-xs-4" %>
                  <div class="col-xs-6"></div>
                </div>
              </div>

              <div class="row">
                <div class="form-group">
                  <label class="col-xs-3 control-label">メールアドレス</label>
                  <%= f.text_field :email, autofocus: true, autocomplete: "email", class:"col-xs-4" %>
                  <div class="col-xs-6"></div>
                </div>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <br>
              <h3>パスワードの変更</h3>
              <div class="row">
                <div class="form-group">
                  <label class="col-xs-3 control-label">新パスワード</label>
                  <%= f.password_field :password, autocomplete: "new-password", class:"col-xs-4" %><i>(変更したくない場合は空白にしてください)※<%= @minimum_password_length %>文字以上</i>
                </div>
              </div>

              <div class="row">
                <div class="form-group">
                  <label class="col-xs-3 control-label">新パスワードの確認</label>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-xs-4" %>
                </div>
              </div>

              <div class="row">
                <div class="form-group">
                  <label class="col-xs-3 control-label">パスワード</label>
                  <%= f.password_field :current_password, autocomplete: "current-password", class:"col-xs-4" %><i>(現在のパスワードを入力してください)</i>
                </div>
              </div>

              <div class="actions">
                <%= f.submit "更新", class:"btn btn-default"%>
              </div>
            <% end %>

            <%= link_to "戻る", :back %>

      </div>
    </div>
    </div>
  </div>
</div>
